{
    "openapi": "3.0.0",
    "info": {
        "title": "Documentación de Productos",
        "description": "Description de productos.",
        "version": "1.0.0"
    },
    "paths": {
        "/api/products": {
            "get": {
                "tags": [
                    "products"
                ],
                "summary": "Mostrar el listado de productos",
                "description": "Display a listing of the resource.",
                "operationId": "1bfaa78d1c2c3848ab8165c5dadcad3e",
                "parameters": [
                    {
                        "name": "page_size",
                        "in": "query",
                        "description": "Size of page",
                        "schema": {
                            "type": "string"
                        },
                        "examples": {
                            "int": {
                                "summary": "Introduce un tamaño de la página.",
                                "value": 5
                            }
                        }
                    },
                    {
                        "name": "current_page",
                        "in": "query",
                        "description": "Current page",
                        "schema": {
                            "type": "string"
                        },
                        "examples": {
                            "int": {
                                "summary": "Introduce la página actual.",
                                "value": 0
                            }
                        }
                    },
                    {
                        "name": "column",
                        "in": "query",
                        "description": "Column order",
                        "schema": {
                            "type": "string"
                        },
                        "examples": {
                            "string": {
                                "summary": "Introduce la columna para ordernar.",
                                "value": "id"
                            }
                        }
                    },
                    {
                        "name": "direction",
                        "in": "query",
                        "description": "Order direction",
                        "schema": {
                            "type": "string"
                        },
                        "examples": {
                            "string": {
                                "summary": "Ordernar de forma ascendente.",
                                "value": "asc"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Mostrar productos."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            },
            "post": {
                "tags": [
                    "products"
                ],
                "summary": "Create a new product",
                "description": "Store a newly created resource in storage.",
                "operationId": "e8185e307706e2cd84bbcf5171e2f09d",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "name",
                                    "code",
                                    "price"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "code": {
                                        "type": "string"
                                    },
                                    "price": {
                                        "type": "number"
                                    },
                                    "dimensions": {
                                        "type": "string"
                                    },
                                    "colors": {
                                        "type": "string"
                                    },
                                    "tags": {
                                        "type": "string"
                                    },
                                    "stock": {
                                        "type": "number"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Show product created."
                    },
                    "400": {
                        "description": "Error."
                    }
                }
            }
        },
        "/api/products/{product}": {
            "get": {
                "tags": [
                    "products"
                ],
                "summary": "Mostrar información de un producto",
                "description": "Display the specified resource.",
                "operationId": "05f6ffcb49f47b4f4fc1a1c21ed60011",
                "parameters": [
                    {
                        "name": "product",
                        "in": "path",
                        "description": "Parámetro necesario para la consulta de datos de un producto",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "examples": {
                            "int": {
                                "summary": "Introduce un número de id de un producto.",
                                "value": "1"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Mostrar info de un producto."
                    },
                    "404": {
                        "description": "No se ha encontrado el producto."
                    },
                    "default": {
                        "description": "Ha ocurrido un error."
                    }
                }
            }
        }
    }
}